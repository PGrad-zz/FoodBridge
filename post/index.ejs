<!DOCTYPE HTML>
<html>
<head>
	<!-- Bootstrap links -->
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
	<!-- our css -->
	<link rel="stylesheet" href="../css/post.css">
	<link rel="stylesheet" href="../css/global.css">

	<!-- jquery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,500" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Patua+One" rel="stylesheet">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<title>New Posting | Fridge</title>
</head>
<body>
	<div class="jumbotron text-center bg-gradient">
		<h1 class="maintitle"><strong>Fridge</strong></h1>
	</div>


	<div class="container postform-container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-login">
					<div class="panel-heading">
						<h2 class="posting-title text-center">Create a Posting</h2>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="main-form" action="/post/new" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="title" id="title" tabindex="1" class="form-control" placeholder="Title" value="" required="required">
									</div>
									<div class="form-group">
										<input type="text" name="description" id="food-description" tabindex="2" class="form-control" placeholder="Description">
									</div>
									<div class="form-group">
										<input type="number" name="quantity" id="quantity" tabindex="2" class="form-control" placeholder="Quantity (lbs)" required="required">
									</div>
									<div class="form-group">
										<input type="text" name="location" id="location" tabindex="2" class="form-control" placeholder="Pickup Location" required="required">
									</div>
									<div class="form-group">
										<input type="datetime-local" name="time_type" id="time_type" tabindex="2" class="form-control" placeholder="Time" required="required">
									</div>
									<div class="form-group">
										<input type="tel" name="phone" id="phone" tabindex="2" class="form-control" placeholder="Phone Number" required="required">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-6">
												<input type="submit" name="register-submit" id="post-submit" tabindex="4" class="form-control gradient-btn" value="Submit">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="../post.js"></script>
</body>
</html>
