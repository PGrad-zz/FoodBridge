<!DOCTYPE HTML>
<html>

<head>
    <!-- Bootstrap links -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- our css -->
    <link rel="stylesheet" type="text/css" href="css/charity.css">
    <link rel="stylesheet" type="text/css" href="css/global.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Patua+One" rel="stylesheet">
    <title>All Postings | Fridge</title>
</head>

<body>
  <% include ./templates/header.html %>
    <div class="container">
        <div class="row">
            <span class="col-md-4">
            	<div class="panel panel-default">
                	<div>
                          <table class="table table-user-information">
                            <tbody>
                              <tr>
                                <td>Charity:</td>
                                <td><%= user.name %></td>
                              </tr>
                              <tr>
                                <td>Address:</td>
                                <td><%= user.address %></td>
                              </tr>
                              <tr>
                                <td>Ratings:</td>
                                <td>5/5</td>
                              </tr>
                                <td>Website:</td>
                                <td><%= user.website %></td>
                              <tr>
                                <td>Email:</td>
                                <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                              </tr>
                                <td>Phone Number:</td>
                                <td>1-805-111-1111</td>
                              </tr>

                            </tbody>
                          </table>
                    </div>
                </div>
            </span>
            <span class='col-md-8' >
                <ul id="post-container">
                  <% posts.forEach(function(post) { %>
                   <li>
                        <div class="panel panel-default posting" onclick="expandPost(this);">
                            <div class="panel-body">
                                <span class='col-md-8'>
                                    <p class='post-name'><%= post.title %></p>
                                    <p class='post-donor'> <%= post.organization %></p>
                                    <p><%= post.quantity %></p>
                                    <div class='post-description'><%= post.description.slice(0,15) %></div>
                                    <div class="panel-hidden">
                                        <br>
                                        <div class="post-description-expanded">
                                          <%= post.description %>
                                        </div>
                                    </div>
                                </span>
                                <span class='col-md-4'>
                                    <br>
                                     <p class='post-contact'> Contact at: <%= post.phone %></p>
                                     <br>
                                     <p class='post-contact'> <%=post.time %> </p>
                                     <br>
                                </span>
                            <i class="material-icons bottomright expander" onclick="contractPost(this);">expand_more</i>
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </span>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js "></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js " integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa " crossorigin="anonymous "></script>


    <script src="js/charity.js"></script>
    <script src="js/global.js"></script>
</body>

</html>
